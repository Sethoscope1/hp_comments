
<h1 class="article_title"><%= @article.title %></h1>

<img src=<%= @article.image %>>

<p class="article_body"><%= @article.body %></p>

<% if @article.id == current_user.id %>
	<%= link_to "Delete Article", article_path(@article), method: :delete, data: { confirm: "Are you sure?" } %>

	<%= link_to "Edit Article", edit_article_path(@article) %>

<% end %>

	<%= link_to "Return to Articles", articles_url, class: 'article_link' %>

<a name="comments">
<%= render partial: "comments/first_form", locals: { comment: @comment, article: @article } %>

<%= render partial: "comments/index", locals: { article: @article } %>