'use strict';

angular.module('app', ['ngResource', 'ngRoute', 'ui.bootstrap'])
    .config(['$routeProvider', function($routeProvider, $locationProvider) {
        $routeProvider
            .when('/',          {controller: 'ArticleIndexCtrl',    templateUrl: '<%= asset_path('angular/templates/index.html') %>'})
            .when('/articles/new', {controller: 'ArticleCreateCtrl',   templateUrl: '<%= asset_path('angular/templates/new.html') %>'})
            .when('/articles/:id', {controller: 'ArticleShowCtrl',     templateUrl: '<%= asset_path('angular/templates/show.html') %>'})
            .otherwise({redirectTo: '/'});
}])